    <build>
        <finalName>de-web</finalName>
        <outputDirectory>${basedir}/war/WEB-INF/classes</outputDirectory>
        <plugins>
            <plugin>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <packagingExcludes>**/log4j.properties</packagingExcludes>
                    <webappDirectory>${basedir}/war</webappDirectory>
                    <manifest>
                        <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                    </manifest>
                    <archive>
                        <manifestEntries>
                            <Build-Version>${BUILD_TAG}</Build-Version>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <executable>perl</executable>
                    <workingDirectory>${basedir}/war/WEB-INF/classes</workingDirectory>
                    <arguments>
                        <argument>generate_keystore.pl</argument>
                        <argument>-v</argument>
                    </arguments>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <version>${gwt.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>compile</goal>
                            <goal>test</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <extraJvmArgs>-Xmx1024M -Xms512M -Xss4M</extraJvmArgs>
                    <webappDirectory>${basedir}/war</webappDirectory>
                    <mode>htmlunit</mode> 
                    <module>org.iplantc.de.discoveryenvironment</module>
		            <compileReport>true</compileReport>
                  <compileSourceArtifacts>
                     <compileSourceArtifact>org.iplantc.core:diskresource</compileSourceArtifact>
                     <compileSourceArtifact>org.iplantc.core:widgets</compileSourceArtifact>
                  </compileSourceArtifacts>
                    <!-- <includes>**/GwtTestSuite*.java</includes> -->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${basedir}/war</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
						<!-- copy resources before the war is packaged -->
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
							<!-- Copy the MANIFEST.MF file into an area accessible by servlets -->
                            <outputDirectory>${basedir}/war/WEB-INF/classes</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/war/META-INF</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.irods.idrop</groupId>
                                    <artifactId>idrop-lite</artifactId>
                                    <version>1.0.2-SNAPSHOT</version>
                                    <outputDirectory>${basedir}/war/applets</outputDirectory>
                                    <destFileName>idrop-lite-1.0.2-SNAPSHOT.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-surefire-plugin</artifactId>
               <version>2.12.4</version>
               <configuration>
                  <!-- <excludes> -->
                     <!-- Exclude all GWT tests from regular JUnit tests. -->
                     <!-- <exclude>**/GwtTest*.java</exclude>
                     <exclude>**/GwtTestSuite*.java</exclude> -->
                  <!-- </excludes> -->
               </configuration>
               <dependencies>
                  <dependency>
                     <!-- Specify Junit Provider -->
                     <groupId>org.apache.maven.surefire</groupId>
                     <artifactId>surefire-junit47</artifactId>
                     <version>2.12.4</version>
                  </dependency>
               </dependencies>
            </plugin>
        </plugins>
    </build>
