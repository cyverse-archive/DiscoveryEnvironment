<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <context-param>
        <param-name>appPropertyFile</param-name>
        <param-value>belphegor.properties</param-value>
    </context-param>
    <context-param>
        <param-name>appPropertyPrefix</param-name>
        <param-value>org.iplantc.belphegor</param-value>
    </context-param>
    <context-param>
        <param-name>org.iplantc.initial-page</param-name>
        <param-value></param-value>
    </context-param>
    <context-param>
        <param-name>org.iplantc.logout-url</param-name>
        <param-value>https://cas-server.iplantcollaborative.org/cas/logout</param-value>
    </context-param>
    <context-param>
        <param-name>org.iplantc.logout-forward</param-name>
        <param-value>http://iplantcollaborative.org</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/classes/belphegor-base.xml
            /WEB-INF/classes/belphegor-security.xml
        </param-value>
    </context-param>

	<!-- Filters -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <!-- Filter Mapping Definitions -->
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <servlet>
        <servlet-name>sessionManagementServlet</servlet-name>
        <servlet-class>org.iplantc.de.server.SessionManagementServlet</servlet-class>
    </servlet>
	
    <servlet>
        <servlet-name>propertyServlet</servlet-name>
        <servlet-class>org.iplantc.de.server.PropertyServlet</servlet-class>
    </servlet>
	
    <servlet>
        <servlet-name>sessionInitializationServlet</servlet-name>
        <servlet-class>org.iplantc.de.server.CasSessionInitializationServlet</servlet-class>
    </servlet>
	
    <servlet>
        <servlet-name>deServiceDispatcher</servlet-name>
        <servlet-class>org.iplantc.de.server.DEServiceDispatcher</servlet-class>
    </servlet>
	
    <servlet>
        <servlet-name>unsecuredDeServiceDispatcher</servlet-name>
        <servlet-class>org.iplantc.de.server.UnsecuredDEServiceDispatcher</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>casDeServiceDispatcher</servlet-name>
        <servlet-class>org.iplantc.de.server.CasServiceDispatcher</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deServiceDispatcher</servlet-name>
        <url-pattern>/belphegor/deservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>unsecuredDeServiceDispatcher</servlet-name>
        <url-pattern>/belphegor/unsecureddeservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>casDeServiceDispatcher</servlet-name>
        <url-pattern>/belphegor/casdeservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionInitializationServlet</servlet-name>
        <url-pattern>/belphegor/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>propertyServlet</servlet-name>
        <url-pattern>/belphegor/properties</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sessionManagementServlet</servlet-name>
        <url-pattern>/belphegor/sessionmanagement</url-pattern>
    </servlet-mapping>
	
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>belphegor.html</welcome-file>
    </welcome-file-list>

</web-app>
